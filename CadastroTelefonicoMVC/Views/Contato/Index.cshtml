@model List<ContatoModel>

@{
    ViewData["Title"] = "Sistema de controle de contatos";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-success" role="button" asp-controller="Contato" asp-action="Criar">NOVO CONTATO</a>
    </div>

    <br>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-success btn-sm close-alert" aria-label="Close"> x </button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemError"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close"> x </button>
            @TempData["MensagemError"]
        </div>
    }

    <br>

    <div class="text-center">
        <h1 class="display-4">Lista de Contatos</h1>
    </div>

    <table class="table table-hover" id="table-contatos">

        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">NOME</th>
                <th scope="col">E-MAIL</th>
                <th scope="col">TELEFONE</th>
                <th scope="col"></th>
            </tr>
        </thead>

        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ContatoModel contato in Model)
                {
                    <tr>
                        <th scope="row">@contato.Id</th>
                        <td>@contato.Nome</td>
                        <td>@contato.Email</td>
                        <td>@contato.Celular</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="btns-tb">
                                <a role="button" class="btn btn-primary me-md-3" asp-route-id="@contato.Id"
                            asp-controller="Contato" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@contato.Id" asp-controller="Contato"
                            asp-action="ExcluirConfirmacao">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>

    </table>
</div>
